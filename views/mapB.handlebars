	<!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>

<body>
<div class="light-bg">
	<div class="logo-header">
		<img class="small-logo img-responsive" src="/images/wordmark.svg">
	</div>

	{{> mapSVG}}


	<div class="bottom-navbar">
		<div class="row">
			<div class="col-xs-10">
				<h4 class="gate-title no-top-m"><strong>Start Gate</strong></h4>
			</div>
		</div>
		<div class="row">
		<div class="col-xs-2 no-right-padding">
			<img class="img-responsive" src="/images/pinStart_noText.svg">
		</div>
		<div class="col-xs-10">
		<select id="start" class="custom-select-lg startgate">
			{{#each gates}}
			<option value="{{id}}" id="optnS{{id}}">{{name}}</option>
			{{/each}}
		</select>
		</div>
		</div>

		<div id="stops">
		</div>

		<div class="row">
			<div class="col-xs-12">
				<h4 class="gate-title no-top-m"><strong>End Gate</strong></h4>
			</div>
		</div>
		<div class="row">
		<div class="col-xs-2 no-right-padding">
			<img class="img-responsive" src="/images/pinEnd_noText.svg">
		</div>
		<div class="col-xs-10">
		<select id="end" class="custom-select-lg endgate">
			{{#each gates}}
			<option value="{{id}}" id="optnE{{id}}">{{name}}</option>
			{{/each}}
		</select>
		</div>
		</div>
		<br>
		<div class="row">
			<div class="col-xs-6">
				<button type="button" id="dialog-link" class="btn add-stop-btn center-block">
					<h4 class="btn-text">Add Stop</h4>
				</button>
				<div id="dialog" title="Explore SAN">
					<p>Select a category to add as a stop.</p>
					<a id="restaurants"><button type="button" class="btn eat-btn">Eat</button></a>
					<a id="shops"><button type="button" class="btn shop-btn">Shop</button></a>
					<a id="rest"><button type="button" class="btn rest-btn">Rest</button></a>
				</div>
			</div>
			<div class="col-xs-6">
				<a id="routeBtn" href="/directions/Gate49+Phil’sBBQ/Phil’sBBQ+Gate39/B">
					<button type="button" id="route" class="btn center-block">
						<h4 class="btn-text">Route Me</h4>
					</button>
				</a>
			</div>
			<script type="text/javascript">
				$("#dialog").dialog({
					autoOpen: false,
					width: 300,
				});

				$("#dialog-link").click(function (event) {
					$("#dialog").dialog("open");
					console.log("clicked");
					event.preventDefault();
				});
			</script>
		</div>
	</div>
	<script src="/js/bootstrap.min.js"></script>
	<script src="https://d3js.org/d3.v5.min.js"></script>

	<script>
		var data = {{{ data.stringify }}};
		var startNodes = "{{startNodes}}";
		var endNodes = "{{endNodes}}";
		var version = "{{version}}"
	</script>
	<script src="/js/map.js"></script>
	<script src="/js/graphRender.js"></script>

	<script>

		var maxY = $(".bottom-navbar").position().top;
		var maxX = $(window).width()
		console.log(`maxY = ${maxY})`)
		$('svg').attr("height", `${maxY}`)
		$('svg').attr("width", `${maxX}`)

	</script>
</div>
</body>

</html>