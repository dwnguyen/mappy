<!doctype html>

<html>

<head>
	<title>Mappy</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">

	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">

	<link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">

	<link href="/css/style.css" rel="stylesheet">

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="https://code.jquery.com/ui/1.11.1/jquery-ui.min.js"></script>

	<!-- this is a comment in HTML -->

	<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	<!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>

<body>

	{{> mapSVG}}


	<div class="bottom-navbar">
		<div class="row">
			<div class="col-xs-10">
				<h4 class="rerouting-text no-top-m"><strong>Start Gate</strong></h4>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-2 no-right-padding">
				<img class="img-responsive" src="/images/pinStart.svg">
			</div>
			<div class="col-xs-10">
				<select id="start" class="custom-select-lg startgate">
					{{#each gates}}
					<option value="{{id}}" id="optnS{{id}}">{{name}}</option>
					{{/each}}
				</select>
			</div>
		</div>

		<div id="stops">
		</div>

		<div class="row">
			<div class="col-xs-12">
				<h4 class="rerouting-text no-top-m"><strong>End Gate</strong></h4>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-2 no-right-padding">
				<img class="img-responsive" src="/images/pinEnd.svg">
			</div>
			<div class="col-xs-10">
				<select id="end" class="custom-select-lg endgate">
					{{#each gates}}
					<option value="{{id}}" id="optnE{{id}}">{{name}}</option>
					{{/each}}
				</select>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-6">
				<button id="dialog-link" class="ui-button ui-corner-all ui-widget center-block">
					<h4>Add Stop</h4>
				</button>
				<div id="dialog" title="Explore SAN">
					<p>Add a stop to your route.</p>
					<a id="restaurants"><button>Eat</button></a>
					<a id="shops"><button>Shop</button></a>
					<a id="rest"><button>Rest</button></a>
				</div>
			</div>
			<div class="col-xs-6">
				<a href="/directions/Gate49+Phil’sBBQ/Phil’sBBQ+Gate39/B">
					<button id="route" class="ui-button ui-corner-all ui-widget center-block">
						<h4>Route Me</h4>
					</button>
				</a>
			</div>
			<script type="text/javascript">
				$("#dialog").dialog({
					autoOpen: false,
					width: 300,
				});

				$("#dialog-link").click(function (event) {
					$("#dialog").dialog("open");
					console.log("clicked");
					event.preventDefault();
				});
			</script>
		</div>
	</div>
	<script src="/js/bootstrap.min.js"></script>
	<script src="https://d3js.org/d3.v5.min.js"></script>
	<script src="/js/graphRender.js"></script>
	<script>
		var data = {{{ data.stringify }}};
		var startNodes = "{{startNodes}}";
		var endNodes = "{{endNodes}}";
		var version = "{{version}}"
	</script>
	<script src="/js/map.js"></script>
	<script>

		var maxY = $(".bottom-navbar").position().top - 15;
		var maxX = $(window).width()
		console.log(`maxY = ${maxY})`)
		$('svg').attr("height", `${maxY}`)
		$('svg').attr("width", `${maxX}`)

	</script>

</body>

</html>