<!doctype html>

<html>

<head>
	<title>Mappy: {{storeType}}</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- Bootstrap css -->
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">

	<!-- Google Font CDN -->
	<link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">

	<!-- Stylesheet -->
	<link href="/css/style.css" rel="stylesheet">

	<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	<!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>	`
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>

</head>

<body>
	<div class="container {{storeType}}-bg">
		<div class="row top-bar">
			<div class="col-xs-3 no-right-padding no-left-padding">
				<div class="back-btn">
					<a id="back" href="/map">
						<button class="btn btn-outline-secondary">Back</button>
					</a>
				</div>
			</div>
			<div class="col-xs-9 no-left-padding no-right-padding">
				<div class="search-bar">
					<input type="text" id="seeker" placeholder='Search'>
				</div>
			</div>
			</div>

	<div id="content">
	</div>
		<!--{{#each stores}}
		<div class="row shop-card">
			<div class="col-xs-4 card-img">
				<img src="{{image}}" class="img-responsive vertical-align" alt="{{name}}">
			</div>
			<div class="col-xs-5 card-text">
				<h3 class="card-title">{{name}}</h3>
				<p class="card-content">Hours: {{hours}}</p>
			</div>
			<div class="col-xs-3 card-btn">
				<button class="add-btn"><a class="rLink" id="{{id}}" href="/map">Add Stop</a></button>
			</div>
		</div>
		{{/each}}-->

	</div>
	</div>
	<script>
		var stores = {{{ stores.stringify }}}
		output = "";
		$.each(stores, function(key, val){
			output += "<div class='row shop-card'>";
			output += "<div class='col-xs-4 card-img'>";
				output += "<img src=" + val.image + " class='img-responsive vertical-align' alt=" + val.name + ">";
			output += "</div>";
			output += "<div class='col-xs-5 card-text'>"
				output += "<h3 class='card-title'>" + val.name + "</h3>";
			output += "</div>";
			output += "<div class='col-xs-3 card-btn'>"
				output += "<button class='add-btn'><a class='rLink' id=" + val.id + " href='/map'>Add Stop</a></button>";
			output += "</div>";
		output += "</div>";
		});

		$('#content').html(output);

		/* SEEKER FUNCTION */
		if (!RegExp.escape) {
		RegExp.escape = function (s) {
			return s.replace(/[\-\[\]{}()*+?.,\\\^$|#\s]/g, "\\$&")
		};
		}
		
		jQuery(function(){
		var $rows = $('.shop-card');
		/*
		$rows.each(function(){
			console.log($(this).children(".card-text").text())
		})
		*/
		$('#seeker').keyup(function () {
			var regex =  new RegExp(RegExp.escape($.trim(this.value).replace(/\s+/g, ' ')).replace(/'/g, '’'), 'i')
			console.log(regex)
			$rows.hide().filter(function () {
				var text = $(this).children(".card-text").text().replace(/\s+/g, ' ').replace(/'/g, '’');
				console.log(text)
				return regex.test(text)
			}).show();
		});
		});



		var version = "{{version}}"
		if ("{{startNodes}}" != "" && "{{endNodes}}" != "") {
			var backString = "/map/{{startNodes}}/{{endNodes}}"
			if (version != "") backString += "/" + version
			$("#back").attr("href", backString);
			$(".rLink").each(function () {
				var endNodesStr = "{{endNodes}}"
				var index = endNodesStr.lastIndexOf("+");
				var leftStr = endNodesStr.substring(0, index);
				if (index != -1) leftStr += "+"
				var rightStr = "+" + endNodesStr.substring(index + 1, endNodesStr.length);
				var combStr = leftStr + this.id + rightStr;
				console.log(leftStr)
				console.log(rightStr)
				console.log(index)
				if (version != "") {
					combStr += "/" + version
				}
				var linkStr = '/map/{{startNodes}}+' + this.id + '/' + combStr;
				var id = "#" + this.id;
				$(id).attr('href', linkStr);
			})
		}

		$(".rLink").click(function () {
			alert("Adding a stop")
		})

	</script>
</body>

</html>