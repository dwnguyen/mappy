<!doctype html>

<html>

<head>
	<title>Mappy</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
	<link href="/css/style.css" rel="stylesheet">
	<!-- this is a comment in HTML -->

	<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	<!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>

<body>
	<div class="container">
		<div class="rerouting-container">
			<p class="rerouting-text"><strong>Start Gate</strong></p>
			<select id="start" class="custom-select-lg startgate" onmousedown="if(this.options.length>6){this.size=6;}">
				{{#each gates}}
				<option value="{{id}}" id="optnS{{id}}">{{name}}</option>
				{{/each}}
			</select>

			<div id="stops">
			</div>

			<p class="rerouting-text"><strong>End Gate</strong></p>
			<select id="end" class="custom-select-lg endgate" onmousedown="if(this.options.length>6){this.size=6;}">
				{{#each gates}}
				<option value="{{id}}" id="optnE{{id}}">{{name}}</option>
				{{/each}}
			</select>
		</div>
		<div class="legend-container">
			<h4 class="legend-item"><strong>Legend</strong></h4>
			<p class="legend-item">
				<strong>Start Gate
					<img class="legend-pin" src="/images/pinStart.svg">
				</strong>
			</p>
			<p class="legend-item">
				<strong>End Gate
					<img class="legend-pin" src="/images/pinEnd.svg">
				</strong>
			</p>
			<p class="legend-item">
				<strong>Stop
					<img class="legend-pin" src="/images/pinStop.svg">
				</strong>
			</p>
			<p class="legend-item">
				<muted>Scroll to zoom, drag to pan</muted>
			</p>

		</div>

		<div class="btn-container center-block">
			<h3 class="optn-text">Add A Stop</h3>
			<div class="shop-optn" href="/shops">
				<a id="shops">
					<h4 class="optn-text"> Shop <span style="float: right; margin-right: 15px">&rsaquo;</span></h4>
				</a>
			</div>
			<div class="eat-optn" href="/restaurants">
				<a id="restaurants">
					<h4 class="optn-text"> Eat <span style="float: right; margin-right: 15px">&rsaquo;</span></h4>
				</a>
			</div>
			<div class="rest-optn" href="/rest">
				<a id="rest">
					<h4 class="optn-text"> Rest <span style="float: right; margin-right: 15px">&rsaquo;</span></h4>
				</a>
			</div>
			<div class="br-btn">
				<h3 class="optn-text" style="padding-left: 5px; padding-right: 5px;"><strong><a
							href="/directions/Gate49+Phil’sBBQ/Phil’sBBQ+Gate39/A">Start Routing</a></strong></h3>
			</div>
		</div>

		{{> mapSVG}}


	</div>
	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="https://d3js.org/d3.v5.min.js"></script>
	<script src="/js/graphRender.js"></script>
	<script>
		var data = {{{ data.stringify }}};
		var startNodes = "{{startNodes}}";
		var endNodes = "{{endNodes}}";
		var version = "{{version}}"
	</script>
	<script src="/js/map.js"></script>

</body>

</html>